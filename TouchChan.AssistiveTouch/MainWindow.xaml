<Window x:Class="TouchChan.AssistiveTouch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchChan.AssistiveTouch"
        mc:Ignorable="d"
        Title="MainWindow"
        AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Grid>
        <local:TouchButton x:Name="Touch" />
        <local:TouchMenu x:Name="Menu" />

        <Border x:Name="GestureBubble" Opacity="0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="140" Height="60" Background="#262626" CornerRadius="{DynamicResource AssistiveTouchCornerRadius}">
            <TextBlock x:Name="GestureTip" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</Window>
