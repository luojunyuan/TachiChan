<Page
    x:Class="TouchChan.AssistiveTouch.Menu.WinMovePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:help="clr-namespace:TouchChan.AssistiveTouch.Helper"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300" d:Visibility="Visible"
    Visibility="Collapsed">

    <Grid x:Name="GridPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <help:TouchMenuItem x:Name="AAA"
            Grid.Row="0" Grid.Column="1"
            Symbol="ArrowUp8" Text=" " Click="AAAOnClick" />

        <help:TouchMenuItem x:Name="BBB"
            Grid.Row="1" Grid.Column="0"
            Symbol="ArrowLeft8" Text=" " Click="BBBOnClick" />

        <help:TouchMenuItem x:Name="CCC"
            Grid.Row="1" Grid.Column="2"
            Symbol="ArrowRight8" Text=" " Click="CCCOnClick" />

        <help:TouchMenuItem x:Name="DDD"
            Grid.Row="2" Grid.Column="1"
            Symbol="ArrowDown8" Text=" " Click="DDDOnClick" />


        <help:ToggleTouchMenuItem x:Name="Stretch"
            Grid.Row="0" Grid.Column="2"
            Symbol="AspectRatio" Text="Stretch Window" />
    </Grid>
</Page>
