<Application x:Class="TouchChan.AssistiveTouch.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TouchChan.AssistiveTouch"
             ShutdownMode="OnMainWindowClose"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Properties/Language.xaml" />
                <ResourceDictionary Source="Properties/AssistiveTouchResource.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Icon Font  -->
            <FontFamily x:Key="SymbolThemeFontFamily">Segoe MDL2 Assets</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
